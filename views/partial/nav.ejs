<script>
  $(function(){
    $("#dropDownBtn").click(function(){
      const checked = $(this).is(":checked");
      const navMain = $(".nav-main");
      // console.log(checked);
      if(checked){
        navMain.removeClass("expand");
        navMain.addClass("collapse");
      }
      else{
        navMain.removeClass("collapse");
        navMain.addClass("expand");
      }
    })
  })
